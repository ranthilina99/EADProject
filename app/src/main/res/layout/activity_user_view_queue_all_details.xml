<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".QueueController.UserViewQueueAllDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="View Queue Details"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@color/purple_700"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueOwnName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Vehicle Type"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Type"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Vehicle No"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueVehicleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle No"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Fuel Type"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueFuelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel Type"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Station Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Station Name"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Station No"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueStationNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Station No"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Arrival Time"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewQueueStationArrivalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrival Time"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Queue Length"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/circle"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/textViewAllQueueLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Queue Length"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="25dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnViewStop"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Exit"
            android:textColor="#EDE8E8"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnViewQueueAllBack"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Back"
            android:textColor="#EDE8E8"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>