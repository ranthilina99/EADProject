<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".QueueController.ViewLengthQueue">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="View Queue"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@color/purple_700"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Queue Length"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/lengthQueue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Average Time"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/avgTimeQueue"/>

    <Button
        android:id="@+id/btnViewQueue1"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:text="Enter"
        android:textColor="#EDE8E8"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnViewQueue2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="View Fuel Details"
        android:textColor="#EDE8E8"
        android:textSize="18sp"/>


</LinearLayout>