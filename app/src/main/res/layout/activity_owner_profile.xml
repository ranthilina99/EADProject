<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".OwnerController.OwnerProfile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textUserprofileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@color/purple_700"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Full Name"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileEmail"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Mobile"
                android:inputType="phone"
                android:layout_marginTop="20dp"
                android:id="@+id/UserProfileMobile"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="User Role"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileRole"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Station Name"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileStationName"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Station No"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileStationNo"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="City"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileCity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:hint="Address"
                android:layout_marginTop="20dp"
                android:id="@+id/OwnerProfileAddress"/>

            <Button
                android:id="@+id/btnUserProfileUpdate"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Update"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnUserProfileBack"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Back"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>